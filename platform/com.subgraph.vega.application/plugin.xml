<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.subgraph.vega.application.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.subgraph.vega.application.application"
            name="Subgraph Vega">
         <property
               name="windowImages"
               value="icons/16x16Vega.png,icons/32x32Vega.png,icons/48x48Vega.png,icons/64x64Vega.png,icons/128x128Vega.png">
         </property>
         <property
               name="appName"
               value="Subgraph Vega">
         </property>
         <property
               name="aboutImage"
               value="icons/vega_small.png">
         </property>
         <property
               name="aboutText"
               value="Copyright 2012 Subgraph Technologies, Inc. http://www.subgraph.com">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.subgraph.vega.commands.category.workspaces"
            name="Workspaces">
      </category>
      <command
            categoryId="com.subgraph.vega.commands.category.workspaces"
            id="com.subgraph.vega.commands.newWorkspace"
            name="New Workspace">
      </command>
      <command
            categoryId="com.subgraph.vega.commands.category.workspaces"
            id="com.subgraph.vega.commands.switchWorkspace"
            name="Switch Workspace">
      </command>
      <command
            categoryId="com.subgraph.vega.commands.category.workspaces"
            id="com.subgraph.vega.commands.resetWorkspace"
            name="Reset Workspace">
      </command>
      <command
            id="com.subgraph.vega.commands.browseHelp"
            name="Open Online Help">
      </command>
      <command
            id="com.subgraph.vega.commands.browseSubgraph"
            name="Open Subgraph Website ">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.subgraph.vega.application.workspaces.NewWorkspaceHandler"
            commandId="com.subgraph.vega.commands.newWorkspace">
      </handler>
      <handler
            class="com.subgraph.vega.application.workspaces.SwitchWorkspaceHandler"
            commandId="com.subgraph.vega.commands.switchWorkspace">
      </handler>
      <handler
            class="com.subgraph.vega.application.workspaces.ResetWorkspaceHandler"
            commandId="com.subgraph.vega.commands.resetWorkspace">
         <enabledWhen>
            <with
                  variable="vega.workspaceLockState">
               <equals
                     value="unlocked">
               </equals>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="com.subgraph.vega.application.about.AboutHandler"
            commandId="org.eclipse.ui.help.aboutAction">
         <activeWhen>
            <count
                  value="*">
            </count></activeWhen>
      </handler>
      <handler
            class="com.subgraph.vega.application.about.BrowseHelpHandler"
            commandId="com.subgraph.vega.commands.browseHelp">
      </handler>
      <handler
            class="com.subgraph.vega.application.about.BrowseSubgraphHandler"
            commandId="com.subgraph.vega.commands.browseSubgraph">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="com.subgraph.vega.views.VegaConsole"
               minimized="false"
               ratio="0.5"
               relationship="fast">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:file?before=vega.quit">
         <command
               commandId="com.subgraph.vega.commands.resetWorkspace"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:help?before=vega.help">
         <command
               commandId="com.subgraph.vega.commands.browseHelp"
               style="push">
         </command>
         <command
               commandId="com.subgraph.vega.commands.browseSubgraph"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="com.subgraph.vega.application.workspaces.WorkspaceLockStateSourceProvider">
         <variable
               name="vega.workspaceLockState"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
 <extension
       point="org.eclipse.ui.views">
    <view
          class="com.subgraph.vega.application.console.VegaConsoleView"
          icon="icons/console.png"
          id="com.subgraph.vega.views.VegaConsole"
          name="Console"
          restorable="true">
    </view>
 </extension>
 <extension
       point="org.eclipse.ui.preferencePages">
    <page
          class="com.subgraph.vega.application.preferences.ProxyPreferencePage"
          id="com.subgraph.vega.preferences.general"
          name="General">
    </page>
    <page
          category="com.subgraph.vega.preferences.general"
          class="com.subgraph.vega.application.preferences.UpdatesPreferencePage"
          id="com.subgraph.vega.preferences.update"
          name="Updates">
    </page>
 </extension>
 <extension
       point="org.eclipse.core.runtime.preferences">
    <initializer
          class="com.subgraph.vega.application.preferences.GeneralPreferenceInitializer">
    </initializer>
 </extension>
 <extension
       point="org.eclipse.ui.bindings">
    <scheme
          id="vega.scheme"
          name="vega.scheme">
    </scheme>
 </extension>


</plugin>